@model DeliveryBus.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}

<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

<style>
    .rr {
        border-radius: 20px;
        height: 40px;
    }

    body {
        background-image: url('../../Content/assets/img/img-01.jpg');
        height: auto;
        width: 100%;
        background-size: cover;
    }
</style>
<div class="row" style="    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    padding: 15px;
    box-shadow: 0 16px 20px;
    border-radius: 12px;
    width:50%;">
    <img src="~/images/HU.png" style="    margin-left: 203px;;
    width: 329px;" />
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control rr", @placeholder = "Enter User Name" })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control rr", @placeholder = "Enter First Name" })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control rr", @placeholder = "Enter Last Name" })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control rr", @placeholder = "Enter Phone Number" })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.StudentNo, new { @class = "form-control rr", @placeholder = "Enter Student Number" })
                    @Html.ValidationMessageFor(model => model.StudentNo, "", new { @class = "text-danger" })

                </div>
            </div>
        </div>
        <div class="col-md-6">

            <div class="form-group" style="text-align:center">
                <div class="col-md-12">
                    @Html.DropDownList("UserType", null, new { @class = "form-control rr" })
                    @*<input type="radio" name="UserType" value="Student" class="form-" /> Student
                <input type="radio" name="UserType" value="Moderator" class="form-" /> Moderator*@


                    @Html.ValidationMessage("UserType", "", new { @class = "text-danger" })

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control rr", @placeholder = "Enter Your Email" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control rr", @placeholder = "Enter Password " })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control rr", @placeholder = "Enter Confirm Password" })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" class="btn btn-default" value="Register" style="background:#373636;color:white;width:100%;border-radius:20px;height:40px;" />
                </div>
            </div>
        </div>
    </div>



    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
