@model IEnumerable<DeliveryBus.Models.BusCompany>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<section id="portfolio" class="portfolio">
    <div class="container" data-aos="fade-up">

        <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="200">
            @foreach (var x in Model)
            {
                <div class="col-lg-3 col-md-6 portfolio-item filter-app">
                    <div class="portfolio-img"><img style="width: 251px;height: 241px;" src="~/images/@x.Image" class="img-fluid" alt=""></div>
                    <div class="portfolio-info">
                        <h4>@x.Name</h4>
                        @*<a href="~/Content/assets/img/portfolio/portfolio-1.jpg" data-gall="portfolioGallery" class="venobox preview-link" title="App 1"><i class="bx bx-plus"></i></a>*@
                        <a href="@Url.Action("List","BusLines", new { id=x.BusCompanyId})" class="details-link" title="More Details"><i class="bx bx-plus"></i></a>
                    </div>
                </div>
            }
        </div>
        
    </div>
</section>