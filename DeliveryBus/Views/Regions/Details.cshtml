@model DeliveryBus.Models.Region

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}



<div class="container">
    <div class="shadow">
        <div class="card">
            <div class="card-header">
                <center style="float:left"> <h2>Trip Details</h2></center>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <img src="~/images/@Model.Image" style="width:100%;height:70%;" alt="Alternate Text" />
                    </div>
                    <div class="col-md-6" style="padding:50px;">
                        <h6><strong>Company Name:</strong> @Model.BusLine.busCompany.Name</h6>
                        <h6><strong>Line:</strong> @Model.BusLine.Line</h6>
                        <h6><strong>Gate:</strong> @Model.BusLine.Gate</h6>
                        <h6><strong>Time:</strong> @Model.Time</h6>
                        <h6><strong>Region Name: </strong>@Model.Name</h6>
                        <h6><strong>Price: </strong>@Model.Price</h6>
                        @Html.ActionLink("Book A Trip", "Apply", new { id = Model.RegionId }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Location", "Location", null,new { @class="btn btn-info"})
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>


<!-- Modal -->
